{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server Debug",
            "request": "launch",
            "type": "node",
            "port": 9229,
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script","debug"]
        },
        {
            "name": "Client Debug",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "npm: serve"
        }
    ]
}